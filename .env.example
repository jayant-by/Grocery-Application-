# ==================================
# CARTORA ENVIRONMENT CONFIGURATION
# ==================================
# Copy this file to .env and update with your values

# Node.js Backend Configuration
NODE_ENV=development
NODE_PORT=5000
NODE_API_PREFIX=/api

# Django Backend Configuration
DJANGO_ENV=development
DJANGO_PORT=8000
DJANGO_SECRET_KEY=your-super-secret-key-change-this-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend Configuration
VITE_PORT=3000
VITE_API_URL=http://localhost:5000/api
VITE_DJANGO_URL=http://localhost:8000

# MongoDB Configuration
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DATABASE=cartora
MONGO_USERNAME=cartora_user
MONGO_PASSWORD=cartora_password_change_this
MONGO_URI=mongodb://cartora_user:cartora_password_change_this@mongodb:27017/cartora?authSource=admin

# Redis Configuration (for Celery)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRY=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# AWS/GCP Configuration (for production)
CLOUD_PROVIDER=aws
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Logging
LOG_LEVEL=info
